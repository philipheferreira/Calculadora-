    public void NumerosNoVisor(char numero){ 
        String texto = Visor.getText();
        texto = texto + numero;
        Visor.setText(texto);
    }
    
    public void usarNumero1(){ 
        numero1 = Double.parseDouble(Visor.getText()); // pegar o valor na tela, transformar em double e colocar na variaval double numero1
        Visor.setText(""); // apagar o valor na tela
    }
    
    public void usarNumero2(){ 
        numero2 = Double.parseDouble(Visor.getText()); // pegar o valor na tela, transformar em double e colocar na variaval double numero2
        Visor.setText(""); // apagar o valor na tela
    }
    
    public void calculo(){
        if((numero1!=0) && (numero2!=0)){
        if(operacao== '+'){ 
            resultado = numero1 + numero2;
        } else if (operacao == '/'){ 
            resultado = numero1 / numero2;
        } else if (operacao == '*'){ 
            resultado = numero1 * numero2;
        } else if(operacao == '-'){ 
            resultado = numero1 - numero2;
        }
        
        Visor.setText(String.valueOf(resultado));
        }
    }

